<h1>お題を編集する</h1>

<div>
  <%= form_with model: @theme, local: true do |f| %>
    <div>
      <label for="inputTitle", class="mb-2">題名</label>
      <%= f.text_field :title, id: "inputTitle", class: "form-control" %>
    </div>
    <div>
      <label for="inputDetail", class="mt-3 mb-2">詳細</label>
      <%= f.text_area :detail, id: "inputDetail", class: "form-control" %>
    </div>
    <div>
      <label for="inputTag", class="mt-3 mb-2">タグ</label>
      <%= f.text_field :name, value: @theme_tags, id: "inputTag", class: "form-control" %>
    </div>
    <div>
      <p>参照画像選択</p>
      <ul>
        <li>
          <p>ファイル複数選択：</p>
          <%= f.file_field :reference_image, accept: "image/*", multiple: true %>
        </li>
      </ul>
    </div>
    <%= f.submit '更新する', class: "btn btn-success my-3" %>
    <% if @theme.end_user_id == current_end_user.id? %>
      <%= link_to '削除する', choice_path, class: "btn btn-secondary my-3" %>
    <% end %>
  <% end %>
</div>