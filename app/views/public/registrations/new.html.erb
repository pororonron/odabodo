<div class="container">
  <div class="row no-gutters">
    <div class="col-sm-8 mx-auto">
      <div class="mt-4 mb-3 text-center">
        <p class="mb-5"><%= image_tag('logo_bg_none2.png') %></p>
        <p class="btn-theme btn-lg font-weight-bold">新規ユーザー登録</p>
      </div>
      <div class="py-3">
        <%= form_with model: @end_user, url: end_user_registration_path, local: true do |f| %>
          <div class="field py-3 form-group row justify-content-between">
            <label class="col-sm-3 col-form-label" for="inputName">
              ユーザー名
              <span class="badge badge-info">必須</span>
            </label>
            <div class="col-sm-8">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", id: "inputName",
                placeholder: "オダ太郎" %>
              <p><small><%= render 'layouts/error_message', f: f, attr: :name %></small></p>
            </div>
          </div>

          <div class="field py-3 form-group row justify-content-between">
            <label class="col-sm-3 col-form-label" for="inputEmail">
              メールアドレス
              <span class="badge badge-info">必須</span>
            </label>
            <div class="col-sm-8">
              <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "メールアドレス" %>
              <p><small><%= render 'layouts/error_message', f: f, attr: :email %></small></p>
            </div>
          </div>

          <div class="field py-3 form-group row justify-content-between">
            <label class="col-sm-3 col-form-label" for="inputPassword">
              パスワード
              <span class="badge badge-info">必須</span>
            </label>
            <div class="col-sm-8">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword",
                placeholder: "#{@minimum_password_length}文字以上かつ半角英数字・記号のみでで入力" %>
              <p><small><%= render 'layouts/error_message', f: f, attr: :password %></small></p>
            </div>
          </div>

          <div class="field py-3 form-group row justify-content-between">
            <label class="col-sm-3 col-form-label" for="inputPassCfm">
              パスワード(確認)
              <span class="badge badge-info">必須</span>
            </label>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",
                id: "inputPassCfm", placeholder: "上記パスワードの再入力" %>
              <p><small><%= render 'layouts/error_message', f: f, attr: :password_confirmation %></small></p>
            </div>
          </div>

          <div class="actions form-group row justify-content-center">
            <p><%= f.submit "登録する", class: "form-control btn btn-lg btn-theme mt-3 font-weight-bold d-flex" %></p>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
