<div class="container">
  <%= render "public/end_users/profile", end_user: @end_user %>

  <div class="row">
    <div class="col-sm-2 mr-3"></div>
    <div class="col-sm-9 pl-3 h5">
      <span class="text-link mr-3"><strong><%= end_user.followers.count %> </strong>フォロー中</span>
      <span class="text-link"><strong><%= end_user.follows.count %> </strong>フォロワー</span>
    </div>
  </div>

  <div class="mt-4">
    <ul class="nav nav-tabs tab_area">
      <li class="nav-item">
        <button class="nav-link" type="button">
          <% if current_admin %>
            <%= link_to admin_end_user_path(end_user) do %>
              <i class="fa-solid fa-arrow-left"></i>
            <% end %>
          <% else %>
            <%= link_to end_user_path(end_user) do %>
              <i class="fa-solid fa-arrow-left"></i>
            <% end %>
          <% end %>
        </button>
      </li>
      <li id="tab3" class="nav-item">
        <button class="nav-link active" data-toggle="tab" data-target="#tabFollowing" type="button">
          フォロー中
        </button>
      </li>
      <li id="tab4" class="nav-item">
        <button class="nav-link" data-toggle="tab" data-target="#tabFollower" type="button">
          フォロワー
        </button>
      </li>
    </ul>

    <div class="tab-content">
      <div id="tabFollowing" class="tab-pane content_area active">
        <%= render "public/end_users/follow_relationship", end_users: @following_end_users %>
      </div>
      <div id="tabFollower" class="tab-pane content_area">
        <%= render "public/end_users/follow_relationship", end_users: @follower_end_users %>
      </div>
    </div>
  </div>
</div>